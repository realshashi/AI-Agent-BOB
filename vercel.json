{
  "version": 2,
  "buildCommand": "pip install --upgrade pip setuptools wheel && pip install -r vercel_requirements.txt",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python@3.1.30",
      "config": {
        "runtime": "python3.11",
        "maxDuration": 60,
        "includeFiles": [
          "templates/**",
          "static/**",
          "*.py",
          "api/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1"
  }
}
