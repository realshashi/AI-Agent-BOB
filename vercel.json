{
  "version": 2,
  "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "builds": [
    {
      "src": "vercel_app.py",
      "use": "@vercel/python@3.1.30",
      "config": {
        "runtime": "python3.11",
        "maxDuration": 60,
        "includeFiles": ["templates/**", "static/**"]
      }
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python@3.1.30",
      "config": {
        "runtime": "python3.11",
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "api/whisky.py"
    },
    {
      "src": "/api/status",
      "dest": "api/whisky.py"
    },
    {
      "src": "/(.*)",
      "dest": "vercel_app.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1",
    "PIP_TARGET": ".pip"
  }
}
